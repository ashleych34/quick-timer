doctype html
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet",type="text/css",href="bootstrap3.min.css")
    link(rel="stylesheet",type="text/css",href="index.css")
    script(type="text/javascript",src="jquery-1.10.2.min.js")
    script(type="text/javascript",src="bootstrap3.min.js")
    script(type="text/javascript",src="index.js")
  body
    #timer
      .clock-title 倒數計時 / Countdown Timer
      .clock-display
        .time-part.hours 00
        .time-separator :
        .time-part.minutes 00
        .time-separator :
        .time-part.seconds 00
    .controls-top
      a#hide.btn.btn-default(onclick="show()") &#xd60;
      a#min60.btn.btn-info.fbtn(onclick="adjust(-60)") 減 60 秒 / -60 sec
      a#min10.btn.btn-info.fbtn(onclick="adjust(-10)") 減 10 秒 / -10 sec
      a#toggle.btn.btn-primary(onclick="toggle()") 開始 / RUN
      a#reset.btn.btn-warning(onclick="reset()") 重設 / RESET
      a#add10.btn.btn-info.fbtn(onclick="adjust(10)") 加 10 秒 / +10 sec
      a#add60.btn.btn-info.fbtn(onclick="adjust(60)") 加 60 秒 / +60 sec
    .presets
      a#def10.btn.btn-success.fbtn(onclick="adjust(0,10)") 10 秒 / 10 sec
      a#def30.btn.btn-success.fbtn(onclick="adjust(0,30)") 30 秒 / 30 sec
      a#def60.btn.btn-success.fbtn(onclick="adjust(0,60)") 1 分鐘 / 1 min
      a#def180.btn.btn-success.fbtn(onclick="adjust(0,180)") 3 分鐘 / 3 min
      a#def300.btn.btn-success.fbtn(onclick="adjust(0,300)") 5 分鐘 / 5 min
      a#def600.btn.btn-success.fbtn(onclick="adjust(0,600)") 10 分鐘 / 10 min
      a#def900.btn.btn-success.fbtn(onclick="adjust(0,900)") 15 分鐘 / 15 min
      a#def1800.btn.btn-success.fbtn(onclick="adjust(0,1800)") 30 分鐘 / 30 min
