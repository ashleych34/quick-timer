.btn
  border: none
  font-weight: 700
  letter-spacing: 0.01em
  transition: transform 0.15s ease, box-shadow 0.2s ease

  &:active
    transform: translateY(2px)

.btn-primary
  background: linear-gradient(135deg, #1a75ff 0%, #67c7ff 100%)
  color: #0a1a3f

.btn-warning
  background: linear-gradient(135deg, #ffcc63 0%, #ff9f58 100%)
  color: #2d1200

.btn-info
  background: linear-gradient(135deg, #54d1ff 0%, #7bf3ff 100%)
  color: #0a1a3f

.btn-success
  background: linear-gradient(135deg, #5cdf8b 0%, #3ec6a1 100%)
  color: #072319

.btn-default
  background: rgba(255, 255, 255, 0.35)
  color: #0a1436
  border: 1px solid rgba(255, 255, 255, 0.4)

