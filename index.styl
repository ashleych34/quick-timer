html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background: linear-gradient(180deg, #0a1436 0%, #1b3c8f 55%, #0f1f52 100%)
  color: #fff
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none
  font-family: "Baloo 2", "Fredoka One", "Avenir", "Segoe UI", sans-serif
  overflow: hidden
  position: relative

body::before
  content: ''
  position: absolute
  inset: 0
  background-image: radial-gradient(2px 2px at 20% 30%, rgba(255, 255, 255, 0.8), transparent 40%),
                    radial-gradient(2px 2px at 70% 10%, rgba(255, 238, 170, 0.9), transparent 45%),
                    radial-gradient(2px 2px at 45% 65%, rgba(173, 213, 255, 0.8), transparent 35%),
                    radial-gradient(3px 3px at 80% 55%, rgba(255, 255, 255, 0.7), transparent 50%)
  opacity: 0.65
  pointer-events: none
  z-index: 0

#timer
  position: relative
  width: 100%
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  gap: 0.5rem
  padding: 60px 20px 80px
  box-sizing: border-box
  z-index: 1

.disney-clock
  display: flex
  align-items: baseline
  gap: 0.35rem
  padding: 28px 36px
  border-radius: 32px
  background: rgba(255, 255, 255, 0.08)
  box-shadow: 0 18px 45px rgba(0, 0, 0, 0.35), 0 0 30px rgba(73, 149, 255, 0.4)
  border: 1px solid rgba(255, 255, 255, 0.15)
  backdrop-filter: blur(6px)
  position: relative

  &::after
    content: 'âœ©'
    position: absolute
    top: 12px
    right: 18px
    font-size: 22px
    color: #ffe07d
    text-shadow: 0 0 12px rgba(255, 224, 125, 0.9)
    animation: twinkle 2.8s ease-in-out infinite alternate

.time-part
  font-size: clamp(64px, 12vw, 140px)
  font-weight: 800
  letter-spacing: 0.05em
  color: #fff
  text-shadow: 0 0 18px rgba(255, 255, 255, 0.6), 0 0 30px rgba(94, 179, 255, 0.8)

.time-separator
  font-size: clamp(54px, 10vw, 120px)
  color: #ffe07d
  text-shadow: 0 0 12px rgba(255, 224, 125, 0.8)

@keyframes twinkle
  0%
    transform: scale(1) rotate(-5deg)
    opacity: 0.7
  100%
    transform: scale(1.2) rotate(8deg)
    opacity: 1

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def10, #def30, #def60, #def180, #def300, #def600, #def900, #def1800
