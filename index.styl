html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background: #000
  color: #fff
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none
  font-family: "Century Gothic", "Helvetica Neue", Arial, sans-serif

#timer
  width: 100%
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  gap: 1.2rem
  padding: 60px 20px 80px
  box-sizing: border-box

.flip-unit
  display: flex
  gap: 0.6rem

.flip-separator
  font-size: 6vw
  min-width: 32px
  text-align: center
  line-height: 1
  color: #f3ba2f
  text-shadow: 0 0 18px rgba(243, 186, 47, 0.6)

.flip-card
  position: relative
  width: clamp(60px, 10vw, 120px)
  height: clamp(80px, 15vw, 160px)
  perspective: 600px
  border-radius: 12px
  overflow: hidden
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35)

  .top, .bottom, .back-top, .back-bottom
    position: absolute
    left: 0
    width: 100%
    height: 50%
    display: flex
    align-items: center
    justify-content: center
    background: linear-gradient(180deg, #1c1c1c 0%, #111 100%)
    color: #e6e6e6
    font-size: clamp(48px, 8vw, 120px)
    font-weight: 700
    backface-visibility: hidden

  .top
    top: 0
    border-bottom: 1px solid #000
    transform-origin: center bottom

  .bottom
    bottom: 0
    border-top: 1px solid #000
    transform-origin: center top
    background: linear-gradient(180deg, #0d0d0d 0%, #1b1b1b 100%)

  .back-top
    top: 0
    transform-origin: center bottom
    transform: rotateX(180deg)

  .back-bottom
    bottom: 0
    transform-origin: center top

  &.flip
    .top
      animation: flipTop 0.25s ease-in forwards
    .back-bottom
      animation: flipBottom 0.25s ease-out 0.25s forwards

@keyframes flipTop
  0%
    transform: rotateX(0deg)
  100%
    transform: rotateX(-180deg)

@keyframes flipBottom
  0%
    transform: rotateX(180deg)
  100%
    transform: rotateX(0deg)

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def10, #def30, #def60, #def180, #def300, #def600, #def900, #def1800
  position: absolute
  top: 5px
  left: 50%
  margin-left: -210px
  width: 170px
  height: 44px
  line-height: 30px

